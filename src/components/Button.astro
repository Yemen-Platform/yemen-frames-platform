---
const { href = "/frame", label = "صمّم إطارك الآن", onClick = "" } = Astro.props
---

<a
  href={href}
  onClick={onClick}
  class="group relative inline-flex items-center gap-3 px-8 py-4 rounded-full text-lg font-bold text-white
         bg-gradient-to-br from-blue-800 via-indigo-900 to-blue-950
         border border-yellow-400 select-none
         transition-all duration-700 ease-in-out overflow-hidden
         no-underline cursor-pointer"
>
  <span class="relative z-10 flex items-center gap-2 transition-colors duration-700 group-hover:text-yellow-300">
    {label}
    <i class="i-heroicons-arrow-right w-5 h-5 transition-transform group-hover:translate-x-2" />
  </span>

  <span
    class="absolute w-[250%] h-[250%] bg-gradient-to-br from-yellow-400 via-yellow-500 to-yellow-600
           opacity-0 group-hover:opacity-10 blur-xl rotate-45
           translate-x-[-150%] translate-y-[-150%]
           transition-transform duration-[900ms] ease-out
           group-hover:translate-x-[50%] group-hover:translate-y-[50%]"
  ></span>
</a>
